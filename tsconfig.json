{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@tools/*": [
        "app/modules/tools/*"
      ],
      "@general/*": [
        "app/general/*"
      ],
      "@canvas/*": [
        "app/modules/canvas/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
      "@store/*": [
        "app/store/*"
      ]
    }
  }
}
